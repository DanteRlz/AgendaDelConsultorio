@model IEnumerable<AgendaDelConsultorio.Models.Localidad>

@{
    ViewData["Title"] = "Localidades";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Añadir</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provincia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Provincia.Descripcion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LocalidadId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.LocalidadId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.LocalidadId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
