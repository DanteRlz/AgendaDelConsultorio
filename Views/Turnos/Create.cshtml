@model AgendaDelConsultorio.Models.turno

@{
    ViewData["Title"] = "Añadir";
}

<h1>@ViewData["Title"]</h1>

<h4>Turno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FechaTurno" class="control-label"></label>
                <input asp-for="FechaTurno" class="form-control" />
                <span asp-validation-for="FechaTurno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraTurno" class="control-label"></label>
                <input asp-for="HoraTurno" class="form-control" />
                <span asp-validation-for="HoraTurno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoTurnoId" class="control-label"></label>
                <select asp-for="EstadoTurnoId" class ="form-control" asp-items="ViewBag.EstadoTurnoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PacienteId" class="control-label"></label>
                <select asp-for="PacienteId" class ="form-control" asp-items="ViewBag.PacienteId"></select>
            </div>
            <div class="form-group">
                <label asp-for="EspecialidadId" class="control-label"></label>
                <select asp-for="EspecialidadId" class ="form-control" asp-items="ViewBag.EspecialidadId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Observacion" class="control-label"></label>
                <input asp-for="Observacion" class="form-control" />
                <span asp-validation-for="Observacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Añadir" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
